// prisma/schema.prisma

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int      @id @default(autoincrement())
  username      String
  avatar        String
  email         String   @unique
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  votes         Vote[]   @relation("VotesGiven")
  receivedVotes Vote[]   @relation("VotesReceived")
  guilds        UserGuild[]

  @@map("users")
}

model Vote {
  id         Int      @id @default(autoincrement())
  value      Int
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  voter      User     @relation("VotesGiven", fields: [voter_id], references: [id])
  user       User     @relation("VotesReceived", fields: [user_id], references: [id])
  voter_id   Int
  user_id    Int

  @@map("votes")
}

model Guild {
  id                Int      @id @default(autoincrement())
  name              String
  icon              String
  discord_guild_id  String
  users           UserGuild[]

  @@map("guilds")
}

model UserGuild {
  user_id   Int
  guild_id  Int
  user      User     @relation(fields: [user_id], references: [id])
  guild     Guild    @relation(fields: [guild_id], references: [id])

  @@id([user_id, guild_id])
  @@map("user_guilds")
}